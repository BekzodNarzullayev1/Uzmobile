<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LanguageActivity">

    <ImageView
        android:layout_marginTop="10dp"
        android:src="@drawable/uzmobile_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:text="O'zbek"
        android:layout_marginVertical="5dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/btn_rus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/btn_uzb"
        android:layout_width="190dp"
        android:background="@drawable/btn1"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:text="Русский"
        android:layout_marginVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn_uzb"
        app:layout_constraintBottom_toTopOf="@id/btn_krill"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/btn_rus"
        android:layout_width="190dp"
        android:background="@drawable/btn1"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:text="Ўзбек"
        android:layout_marginVertical="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_rus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/btn_krill"
        android:layout_width="190dp"
        android:background="@drawable/btn1"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt"
        android:layout_marginBottom="20dp"
        android:textColor="#3A3A3A"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Digital Creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>